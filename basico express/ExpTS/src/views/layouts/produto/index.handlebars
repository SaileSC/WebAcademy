<div class="d-flex justify-content-between">
    <h4>Listagem de produtos</h4>
    <a href="/produto/create"><i class="bi bi-plus-square-fill fs-2"></i></a>
</div>

<table class="table table-striped">
    <thead>
        <th>Nome</th>
        <th>Preço</th>
        <th>Opções</th>
    </thead>
    <tbody>
        {{#each produtos}}
        <tr>
            <th>{{nome}} </th>
            <th> {{preco}} </th>
            <th> 
                <a href="/produto/{{id}}"> <i class="bi bi-eye-fill"></i></a>
                <a href="/produto/update/{{id}}"> <i class="bi bi-pencil-fill"></i></a>
                <a href="/produto/remove/{{id}}"> <i class="bi bi-trash-fill"></i></a>
            </th>
        </tr>
        {{/each}}
    </tbody>
</table>